# ==================================
# VIDEO SHARING APP - ENVIRONMENT CONFIGURATION
# ==================================
# Team 10 - Video Sharing Platform
# Copy this file to .env and fill in your values

# ==================================
# API CONFIGURATION
# ==================================
# Backend API Base URL
API_BASE_URL=http://localhost:3000/api
# Alternative for production
# API_BASE_URL=https://api.videosharing.com

# API Timeout (milliseconds)
API_TIMEOUT=30000

# ==================================
# AUTHENTICATION
# ==================================
# JWT Secret Key (for local development)
JWT_SECRET=your-secret-key-here

# Token Expiration Times
ACCESS_TOKEN_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=7d

# ==================================
# STORAGE & CACHE
# ==================================
# AsyncStorage Keys Prefix
STORAGE_PREFIX=@video_app_

# Cache Duration (milliseconds)
CACHE_DURATION=300000

# ==================================
# UPLOAD CONFIGURATION
# ==================================
# Maximum file size for video uploads (bytes)
MAX_VIDEO_SIZE=104857600

# Maximum file size for image uploads (bytes)
MAX_IMAGE_SIZE=5242880

# Supported video formats (comma-separated)
SUPPORTED_VIDEO_FORMATS=mp4,mov,avi

# Supported image formats (comma-separated)
SUPPORTED_IMAGE_FORMATS=jpg,jpeg,png,webp

# ==================================
# CLOUD STORAGE (Optional)
# ==================================
# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=video-sharing-bucket

# Cloudinary Configuration (Alternative)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ==================================
# SOCIAL MEDIA INTEGRATION
# ==================================
# Facebook App Configuration
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Twitter/X API Configuration
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret

# Instagram API Configuration
INSTAGRAM_CLIENT_ID=your-instagram-client-id
INSTAGRAM_CLIENT_SECRET=your-instagram-client-secret

# ==================================
# ANALYTICS & MONITORING
# ==================================
# Google Analytics
GOOGLE_ANALYTICS_ID=UA-XXXXX-X

# Sentry Error Tracking
SENTRY_DSN=https://xxx@sentry.io/xxx

# ==================================
# PUSH NOTIFICATIONS
# ==================================
# Firebase Cloud Messaging
FCM_SERVER_KEY=your-fcm-server-key
FCM_SENDER_ID=your-fcm-sender-id

# ==================================
# VIDEO PROCESSING
# ==================================
# Video Transcoding Service
TRANSCODING_SERVICE_URL=http://localhost:4000

# Thumbnail Generation
THUMBNAIL_QUALITY=80
THUMBNAIL_WIDTH=320
THUMBNAIL_HEIGHT=180

# ==================================
# SEARCH & RECOMMENDATION
# ==================================
# Elasticsearch Configuration
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX=videos

# ==================================
# PAYMENT GATEWAY (E-commerce)
# ==================================
# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx
STRIPE_SECRET_KEY=sk_test_xxxxx

# PayPal Configuration
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_SECRET=your-paypal-secret
PAYPAL_MODE=sandbox

# ==================================
# EMAIL SERVICE
# ==================================
# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password

# SendGrid (Alternative)
SENDGRID_API_KEY=your-sendgrid-api-key

# ==================================
# APP CONFIGURATION
# ==================================
# App Environment
NODE_ENV=development

# App Version
APP_VERSION=1.0.0

# Debug Mode
DEBUG_MODE=true

# ==================================
# FEATURE FLAGS
# ==================================
# Enable/Disable Features
ENABLE_COMMENTS=true
ENABLE_LIKES=true
ENABLE_SHARES=true
ENABLE_ECOMMERCE=true
ENABLE_LIVE_STREAMING=true
ENABLE_STORIES=true
ENABLE_DARK_MODE=true

# ==================================
# RATE LIMITING
# ==================================
# API Rate Limits
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==================================
# SECURITY
# ==================================
# CORS Allowed Origins
CORS_ORIGINS=http://localhost:19000,http://localhost:8081

# Content Security Policy
CSP_ENABLED=true

# ==================================
# LOGGING
# ==================================
# Log Level (error, warn, info, debug)
LOG_LEVEL=debug

# Log to File
LOG_TO_FILE=false

